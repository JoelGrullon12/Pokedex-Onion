@using Pokedex.Core.Application.ViewModels.Region
@model RegionViewModel
@{
    ViewData["Title"] = "Eliminar Region";
}

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">¿Esta seguro que quiere eliminar esta Region? <br />
        Se eliminaran tambien todos los Pokemones que pertenecen a esa region. <br />
        Esta accion no se puede deshacer</p>
    <form method="post" asp-controller="Regions" asp-action="Delete">
        <a asp-controller="Regions" asp-action="Index" class="btn btn-primary">Cancelar</a>
        <input type="submit" class="btn btn-danger" value="Eliminar" />
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.Name" />
        <input type="hidden" asp-for="@Model.Description" />
    </form>
  </div>
</div>