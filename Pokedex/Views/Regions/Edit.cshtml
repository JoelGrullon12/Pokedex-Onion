@using Pokedex.Core.Application.ViewModels.Region
@model RegionViewModel
@{
    ViewData["Title"] = "Editar Region";
}

<div class="card col-md-10 offset-1">
  <div class="card-header">
    <h4>Editar Region</h4>
  </div>
  <div class="card-body">
    <form method="post" asp-controller="Regions" asp-action="Edit">

      <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Nombre</label>
        <input asp-for="@Model.Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

     <div class="mb-3">
          <div class="form-floating">
            <textarea class="form-control" asp-for="@Model.Description" placeholder="Inserte una descripcion" style="height: 150px;"></textarea>
            <label>Descripcion</label>
        <span asp-validation-for="Description" class="text-danger"></span>
          </div>
      </div>
      
      <a asp-controller="Regions" asp-action="Index" class="btn btn-warning">Volver</a>
      <button type="submit" class="btn btn-success">Terminar Edicion</button>
    </form>
  </div>
</div>