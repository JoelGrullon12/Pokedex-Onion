@using Pokedex.Core.Application.ViewModels.Pokemon
@model PokemonViewModel
@{
    ViewData["Title"] = "Eliminar Pokemon";
}

<div class="card mb-3">
  <img src="@Model.ImgUrl" class="card-img-top" alt="Imagen de @Model.Name">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">¿Esta seguro que quiere eliminar este Pokemon? Esta accion no se puede deshacer</p>
    <form method="post" asp-controller="Pokemons" asp-action="Delete">
        <a asp-controller="Pokemons" asp-action="Index" class="btn btn-primary">Cancelar</a>
        <input type="submit" class="btn btn-danger" value="Eliminar" />
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.Name" />
        <input type="hidden" asp-for="@Model.Description" />
        <input type="hidden" asp-for="@Model.ImgUrl" />
        <input type="hidden" asp-for="@Model.PrimaryTypeId" />
        <input type="hidden" asp-for="@Model.SecondaryTypeId" />
        <input type="hidden" asp-for="@Model.RegionId" />
    </form>
  </div>
</div>